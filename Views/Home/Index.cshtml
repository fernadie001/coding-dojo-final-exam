@{
    ViewData["Title"] = "Home Page";
}
@model User

<div class="text-center">
    <h1 class="display-4">Hobby Hub!</h1>
    <div class="row">
        <div class="col-sm-5">
            <h1>Register</h1>
            <form asp-action="Register" method="post" asp-controller="Home">
                <div class="form-group">
                    <label for="Name">Name</label>
                    <input asp-for="Name" class="form-control"/>
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Alias">Username</label>
                    <input asp-for="Alias" class="form-control"/>
                    <span asp-validation-for="Alias" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Email">Email</label>
                    <input asp-for="Email" class="form-control"/>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Password">Password</label>
                    <input asp-for="Password" class="form-control"/>
                    <small>Password must be at least 8 characters</small>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="Confirm">Confirm Password</label>
                    <input asp-for="Confirm" class="form-control"/>
                    <span asp-validation-for="Confirm" class="text-danger"></span>
                </div>
                <input type="submit" value="Submit" class="btn btn-primary">
            </form>
        </div>
        <div class="col-sm-2"></div>
        <div class="col-sm-5">
            <h1>Login</h1>
            <partial name="_login"/>
        </div>
    </div>
</div>